<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformApp.ToDoList">
	<ContentView.Content>
		<StackLayout>
			<Label Text="{Binding Path=Title}"></Label>
			<ListView ItemsSource="{Binding Path=Elements}"
					  IsGroupingEnabled="{Binding Path=IsGrouped}">
					<ListView.ItemTemplate>
						<DataTemplate>
							<TextCell Text="{Binding Path=ItemName}" Detail="{Binding Path=Description}" Command="{Binding Path=NavigateCommand}" />
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
		</StackLayout>
	</ContentView.Content>
</ContentView>