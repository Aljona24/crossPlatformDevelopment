<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformApp.ToDoList">
	<ContentView.Content>
		<StackLayout>
			<ListView x:Name="ItemsList" ItemsSource="{Binding Path=Elements}"
                IsGroupingEnabled="{Binding Path=IsGrouped}"
                RefreshCommand="{Binding Path=RefreshCommand}">
					<ListView.ItemTemplate>
						<DataTemplate>
							<TextCell Text="{Binding Path=ItemName}" Detail="{Binding Path=DescriptionX}" Command="{Binding Path=NavigateCommand}" />
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
		</StackLayout>
	</ContentView.Content>
</ContentView>