<?xml version="1.0" encoding="utf-8" ?>
<Image xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="CrossPlatformApp.ToggleImage">
  <Image.Style>
    <Style TargetType="Image">
      <Style.Triggers>
        <DataTrigger TargetType="Image" Binding="{Binding Path=IsToggled}" Value="True">
          <Setter Property="HeightRequest" Value="{Binding Path=ToggleHeight}" />
        </DataTrigger>
      </Style.Triggers>
    </Style>
  </Image.Style>
</Image>